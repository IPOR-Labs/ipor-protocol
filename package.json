{
    "name": "hardhat-project",
    "devDependencies": {
        "@hardhat-docgen/core": "1.2.3",
        "@hardhat-docgen/markdown": "1.2.4",
        "@nomiclabs/hardhat-ethers": "2.0.5",
        "@nomiclabs/hardhat-waffle": "2.0.3",
        "@nomiclabs/hardhat-web3": "2.0.0",
        "@openzeppelin/hardhat-upgrades": "1.17.0",
        "@openzeppelin/test-helpers": "0.5.15",
        "@openzeppelin/truffle-upgrades": "1.15.0",
        "@truffle/hdwallet-provider": "1.7.0",
        "@typechain/ethers-v5": "9.0.0",
        "@typechain/hardhat": "4.0.0",
        "@types/chai": "4.3.1",
        "@types/mocha": "9.1.1",
        "@types/node": "17.0.25",
        "chai": "4.3.6",
        "dotenv": "10.0.0",
        "ethereum-waffle": "3.4.4",
        "ethers": "5.6.1",
        "hardhat": "2.9.3",
        "hardhat-abi-exporter": "2.8.0",
        "hardhat-contract-sizer": "2.5.1",
        "hardhat-docgen": "1.3.0",
        "hardhat-gas-reporter": "1.0.8",
        "mocha-param": "2.0.1",
        "npm-run-all": "4.1.5",
        "prettier": "2.6.2",
        "prettier-plugin-solidity": "1.0.0-beta.19",
        "solhint": "3.3.7",
        "solidity-coverage": "0.7.20",
        "truffle": "5.5.11",
        "ts-node": "10.7.0",
        "typechain": "7.0.1",
        "typescript": "4.6.3",
        "web3": "1.7.3"
    },
    "scripts": {
        "coverage": "npx hardhat coverage",
        "compile:hardhat": "npx hardhat compile",
        "compile:truffle": "truffle compile --all",
        "migrate:truffle": "truffle migrate --network $ETH_BC_NETWORK_NAME  --compile-none",
        "migrate:truffle-reset": "truffle migrate --network $ETH_BC_NETWORK_NAME --reset --compile-none",
        "test:unit": "export FORK_ENABLED=false; npx hardhat test",
        "test:mainnet": "export FORK_ENABLED=true; npx hardhat test test/endToEnd/*.ts",
        "test": "npm-run-all test:*",
        "solhint": "./node_modules/.bin/solhint -f table contracts/**/*.sol",
        "export-abi": "npx hardhat export-abi"
    },
    "dependencies": {
        "@openzeppelin/contracts": "4.5.0",
        "@openzeppelin/contracts-upgradeable": "4.5.2",
        "edit-json-file": "1.7.0",
        "hardhat-tracer": "1.0.0-alpha.6",
        "keccak256": "1.0.6"
    }
}
